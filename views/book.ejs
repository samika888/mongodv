<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

</head>

<body>
    <h1 class="text-center">
        <%= title %>
    </h1>
    <h2 class="text-muted text-center"> Welcome to our book app</h2>

    <div class="row">

        <%bookList.forEach(function(book){%>
            <div class="card shadow-sm rounded" style="width: 20rem; margin: 8px; border-radius: 20px;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=book.title%>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted"></h6>
                    <p class="card-text">
                        <%=book.description%>

                    </p>
                    <h6 class="card-subtitle mb-2 text-muted">Genre:<%=book.genre%>
                    </h6>
                    <button class="btn btn-primary text-white">
                        <a href="/book/edit/<%=book._id%>" class="text-white">Edit</a>
                    </button>
                    <button class="btn btn-danger">
                        <a href="/book/delete/<%= book._id%>" class="text-white">Delete</a>
                    </button>
                </div>
            </div>
            <%})%>
    </div>
    <a class="btn btn-primary" href="/book/add">Add Books</a>
</body>

</html>









